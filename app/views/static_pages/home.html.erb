<% if signed_in? %>
	<div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/stats' %>
      </section>
      <section>
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>

    <div class="span8">
      <h3>Micropost Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div> 
<% else %>

<div class="center hero-unit">
  <h1>Welcome to ...</h1>

  <h2>
    <%= link_to image_tag("triptagglogo.png", alt: "Rails"), 'http://triptagg.herokuapp.com/' %>
    <br>
    Triptagg streamlines the capture and feedback of student experiences.
  </h2>

  <%= link_to "Sign up now!", signup_path, class: "btn btn-large btn-primary" %>
</div>
<% end %> 